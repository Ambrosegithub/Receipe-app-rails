<div class="container">

    <div class="row justify-content-end mb-3">
        <div class="col-2 text-end">
            <%= link_to 'Add Inventory', new_inventory_path, class: 'btn btn-success' %>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <h2 class="display-3">
                <%= @inventory.name %>
            </h2>
        </div>
        <div class="col-12 justify-content-start">
            <table class="table table-striped table-bordered table-hover">
                <% if @foods.empty? %>
                    <p class="text-center">No Foods in found In inventory.</p>
                <% else %>
                <thead class="table-dark">
                    <tr>
                    <th>Food</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @foods.each do |food| %>
                    <tr>
                        <td><%= food.name %></td>
                        <td><%= food.measurement_unit %></td>
                        <td><span>$<%= food.price %></span></td>
                        <td><%= link_to "Delete", food_path(food), data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure?"
                            }, class: 'btn btn-sm btn-danger' %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>

</div>
