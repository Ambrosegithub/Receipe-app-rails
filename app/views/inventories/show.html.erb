<div class="container">

    <div class="row justify-content-end mb-3">
        <div class="col-2 text-end">
            <button type = "button" class= "btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#foodAdd">
                Add Inventory
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <h2 class="display-3">
                <%= @inventory.name %>
            </h2>
        </div>
        <div class="col-12 justify-content-start">
            <table class="table table-striped table-bordered table-hover">
                <% if @inventory_foods.empty? %>
                    <p class="text-center">No Foods in found In inventory.</p>
                <% else %>
                <thead class="table-dark">
                    <tr>
                    <th>Food</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @inventory_foods.each do |invfood| %>
                    <tr>
                        <td><%= invfood.food.name %></td>
                        <td><%= invfood.quantity %></td>
                        <td><%= link_to "Delete", inventory_inventory_food(invfood), data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure?"
                            }, class: 'btn btn-sm btn-danger' %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>

</div>

<%= render partial: 'add_food' %>