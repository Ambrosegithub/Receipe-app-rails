<table class="table table-striped table-bordered table-hover">
    <% if @foods.empty? %>
      <p>There are no foods yet.</p>
    <% else %>
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.quantity %></td>
            <td><span>$<%= food.price %></span></td>
        <% end %>
      </tbody>
    <% end %>
  </table>